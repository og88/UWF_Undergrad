int collats(int x);
int f(int x);
void buildarray();
void printarray();
void compare(int N);
double count[1000][3];
int n;

void compare(int N)
{
	int i;
		for(i = 1; i <= N; i++)
		{
			collats(i);
			int y;
			for(y = 0; y < (sizeof(count)/ sizeof(count[0]));y++)
			{
				if(n == count[y][0])
				{
					count[y][1]++;
				}
			}
			printf("%i\n", n);
		}
}

void buildarray()
{
	int i;
	for(i = 0; i < (sizeof(count)/ sizeof(count[0]));i++)
		{
			count[i][0]= i;
			count[i][1]= 0;
		}
}

void printarray()
{
	int i;
	for(i = 0; i < (sizeof(count)/ sizeof(count[0]));i++)
		{
			printf("<%f, %f, %f>\n",count[i][0],count[i][1],count[i][2]);
		}
}

int collats(int x)
{
	n = 0;
	if(x == 0)
	{
		return n;
	}
	else
	{
		return f(x);
	}
}

int f(int x)
{
	if((x % 2) != 0)
	{
		n++;
		x = ((3*x)+1);
	}
	else
	{
		n++;
		x = (x/2);
	}
	if(x == 1)
	{
		return x;
	}
	else
	{
		f(x);
	}
}
