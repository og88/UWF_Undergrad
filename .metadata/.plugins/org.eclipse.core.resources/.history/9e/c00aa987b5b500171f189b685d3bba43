#include <stdio.h>

int collats(int x);
int f(int x);

int n;
int main(int argc, char *argv[])
{
	int n = collats(4);
	printf("%i\n", n);
}

int collats(int x)
{
	n = 0;
	if(x == 0)
	{
		return n;
	}
	else
	{
		return x = f(x);
	}
}

int f(int x)
{
	if((x % 2) != 0)
	{
		x = ((3*x)+1);
	}
	else
	{
		x = (x/2);
	}
	if(x == 1)
	{
	return x;
	}
	else
	{
		f(x);
	}
}
