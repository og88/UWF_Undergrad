#include <stdio.h>

int collats(int x);
int f(int x);

int main(int argc, char *argv[])
{
	int n = collats(2);
	printf("%i\n", n);
}

int collats(int x)
{
	if(x == 0)
	{
		return 0;
	}
	else
	{
		x = f(x);
		return collats(x);
	}
}

int f(int x)
{
	if((x % 2) != 0)
	{
		return ((3*x)+1);
	}
	else
	{
		return (x/2);
	}
}
