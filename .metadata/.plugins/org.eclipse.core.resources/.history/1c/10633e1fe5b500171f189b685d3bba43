#include <stdio.h>

int collats(int x);
int f(int x);
void buildarray();
void printarray();
int count[100][2];
int y;
int n, N;
int main(int argc, char *argv[])
{
	buildarray();
	N = 10;
	int i;
	for(i = 1; i <= N; i++)
	{
		collats(i);
		for(y = 0; y < (sizeof(count)/ sizeof(count[0]));y++)
		{
			if(n == count[y][0])
			{
				count[y][1]++;
			}
		}
		printf("%i\n", n);
	}

}

void compare(int n)
{
	int i;
		for(i = 1; i <= N; i++)
		{
			collats(i);
			for(y = 0; y < (sizeof(count)/ sizeof(count[0]));y++)
			{
				if(n == count[y][0])
				{
					count[y][1]++;
				}
			}
			printf("%i\n", n);
		}
}

void buildarray()
{
	int i;
	for(i = 0; i < (sizeof(count)/ sizeof(count[0]));i++)
		{
			count[i][0]= i;
			count[i][1]= 0;
		}
}

void printarray()
{
	int i;
	for(i = 0; i < (sizeof(count)/ sizeof(count[0]));i++)
		{
			printf("<%i, %i>\n",count[i][0],count[i][1]);
		}
}

int collats(int x)
{
	n = 0;
	if(x == 0)
	{
		return n;
	}
	else
	{
		return f(x);
	}
}

int f(int x)
{
	if((x % 2) != 0)
	{
		n++;
		x = ((3*x)+1);
	}
	else
	{
		n++;
		x = (x/2);
	}
	if(x == 1)
	{
		return x;
	}
	else
	{
		f(x);
	}
}
