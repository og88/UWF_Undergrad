#include <stdio.h>
#include <time.h>
#include <string.h>

char array[20480][4096];
int i;


void writeRow();
void readRow();
void writeColumn();
void readColumn();

int main(int argc, char* argv[])
{
	clock_t before,after;
	int i,x;
	before = clock();
	for(x = 0; x < 100; x++)
	{
		writeRow();
		readRow();
		writeColumn();
		readColumn();
	}
	after = clock();
	printf("%ld\n",(1000 * ((after - before)/CLOCKS_PER_SEC)));
}

void writeRow()
{
	for(i = 0; i < 20480; i++)
			{
				array[i][0] = 'a';
			}
}

void readRow()
{
	for(i = 0; i < 20480; i++)
	{
		char a = array[i][0];
		char * t;
	}
}

void writeColumn()
{


	for(i = 0; i < 4096; i++)
	{
		array[0][i] = 'a';
	}
}

void readColumn()
{

	for(i = 0; i < 4096; i++)
	{
		char a = array[0][i];
	}
}
